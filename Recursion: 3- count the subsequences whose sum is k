#include <bits/stdc++.h>
using namespace std;
int printS(int ind, int arr[],int s,int sum, int n){
    
    if(ind == n){
        //condition satisfies 
        if(s==sum){
            return 1;
        }
        //condition not satisfies
        return 0;
    }
    // take the particular index
    s+=arr[ind];
    
    int l=printS(ind+1,arr,s,sum,n);
    
    s-=arr[ind];
    
    //not take
    int r = printS(ind+1, arr,s,sum, n);
    
    return l+r;
}
int main() {
	// your code goes here
	int arr[]={1,2,1};
	int n=3;
	int sum=2;
	cout<<printS(0,arr,0,sum,n)<<endl;
	return 0;
}
int main() {
	// your code goes here
	int arr[]={1,2,1};
	int n=3;
	int sum=2;
	cout<<printS(0,arr,0,sum,n)<<endl;
	return 0;
}
