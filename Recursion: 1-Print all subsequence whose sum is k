#include <bits/stdc++.h>
using namespace std;
void printS(int ind, int arr[], vector<int> &ds,int s,int sum, int n){
    
    if(ind == n){
        if(s==sum){
            for(auto it: ds) cout<<it<<" ";
            cout<<endl;
        }
        return;
    }
    // take the particular index
    ds.push_back(arr[ind]);
    s+=arr[ind];
    printS(ind+1,arr,ds,s,sum,n);
    ds.pop_back();
    s-=arr[ind];
    
    //not take
    printS(ind+1, arr, ds,s,sum, n);
}
int main() {
	// your code goes here
	int arr[]={1,2,1};
	int n=3;
	vector<int> ds;
	int sum=2;
	printS(0,arr,ds,0,sum,n);
	return 0;
}
//Noice way to put the code
